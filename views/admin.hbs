
<div class="row">
  <div class="col-6">Users</div>
  <div class="col-6 d-flex justify-content-end">
    <a href="adduser" type="button" class="btn btn-primary align-self-center">+ Add Train</a>
  </div>
</div>



<table class="table table-bordered border-primary">
  <thead>
    <tr>
      <th scope="col" class="text-end">Train_No</th>
      <th scope="col" class="text-end">Source_Name</th>
      <th scope="col" class="text-end">departure_time</th>
      <th scope="col" class="text-end">Dest_Name</th>
      <th scope="col" class="text-end">Approaching_time</th>
      <th scope="col" class="text-end">F_or_S</th>
      <th scope="col" class="text-end">Ticket_price</th>
      <th scope="col" class="text-end">Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each rows}}
    <tr>
     
      <td>{{this.Train_No}}</td>
      <td>{{this.Source_Name}}</td>
      <td>{{this.departure_time}}</td>
      <td>{{this.Dest_Name}}</td>
      <td>{{this.Approaching_time}}</td>
      <td>{{this.F_or_S}}</td>
     <td>{{Ticket_price}}</td>
    
    <td>
        <a href="/editcent/{{this.departure_time}}" type="button" class="'btn btn-light btn-small"><i class="bi bi-pencil"></i> Edit C</a> 
        <a href="/edituser/{{this.departure_time}}" type="button" class="'btn btn-light btn-small"><i class="bi bi-pencil"></i> Edit W</a> 
        <a href="/{{this.departure_time}}" type="button" class="'btn btn-light btn-small"><i class="bi bi-person-x"></i> Delete</a> 
    </td> 
    {{/each}}
  </tbody>
</table>